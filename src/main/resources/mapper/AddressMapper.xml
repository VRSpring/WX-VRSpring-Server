<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="AddressDao">

    <resultMap id="AddressResult" type="Address" autoMapping="true">
        <id column="id" property="id" javaType="Integer" jdbcType="INTEGER"/>
        <result property="gender" column="gender" javaType="Integer" jdbcType="INTEGER"/>
        <result property="is_def" column="is_def" javaType="Integer" jdbcType="INTEGER"/>
        <result property="created_at" column="created_at" javaType="Date" jdbcType="TIMESTAMP"/>
        <result property="updated_at" column="updated_at" javaType="Date" jdbcType="TIMESTAMP"/>
        <result property="deleted_at" column="deleted_at" javaType="Date" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="getByUid" resultMap="AddressResult">
        SELECT
        id,
        uid,
        is_def,
        mobile,
        receiver,
        gender,
        province,
        city,
        district,
        road,
        address,
        created_at,
        updated_at,
        deleted_at
        FROM address
        WHERE uid=#{uid} AND deleted_at is NULL
        ORDER by is_def DESC
    </select>
    <select id="getFirstAddress" resultMap="AddressResult">
        SELECT
        id,
        uid,
        is_def,
        mobile,
        receiver,
        gender,
        province,
        city,
        district,
        road,
        address,
        created_at,
        updated_at,
        deleted_at
        FROM address
        WHERE uid=#{uid} AND deleted_at IS NULL
        ORDER BY is_def DESC 
        limit 0,1
    </select>

    <select id="getById" resultMap="AddressResult">
        SELECT
        id,
        uid,
        is_def,
        mobile,
        receiver,
        gender,
        province,
        city,
        district,
        road,
        address,
        created_at,
        updated_at,
        deleted_at
        FROM  address
        WHERE id=#{id} AND deleted_at IS NULL
    </select>

    <select id="getDefaultByUid" resultMap="AddressResult">
        SELECT
        id,
        uid,
        is_def,
        mobile,
        receiver,
        gender,
        province,
        city,
        district,
        road,
        address,
        created_at,
        updated_at,
        deleted_at
        FROM address
        WHERE uid=#{uid} and is_def=1 AND deleted_at IS NULL
    </select>

    <select id="getByMobile" resultMap="AddressResult">
        SELECT
        id,
        uid,
        is_def,
        mobile,
        receiver,
        gender,
        province,
        city,
        district,
        road,
        address,
        created_at,
        updated_at,
        deleted_at
        FROM address
        WHERE mobile=#{mobile} AND deleted_at is NULL
    </select>

    <select id="countByUid" resultType="Integer">
        SELECT count(1) FROM address
        WHERE uid=#{uid} AND deleted_at is NULL
    </select>


    <insert id="insert" parameterType="Address">
        INSERT INTO address(
        <trim prefixOverrides="," prefix="" suffix="" suffixOverrides=",">
            <if test="uid!=null">
                uid
            </if>
            <if test="is_def!=null">
                ,is_def
            </if>
            <if test="mobile!=null">
                ,mobile
            </if>
            <if test="receiver!=null">
                ,receiver
            </if>
            <if test="gender!=null">
                ,gender
            </if>
            <if test="province!=null">
                ,province
            </if>
            <if test="city!=null">
                ,city
            </if>
            <if test="district!=null">
                ,district
            </if>
            <if test="road!=null">
                ,road
            </if>
            <if test="address!=null">
                ,address
            </if>
            ,created_at
            ,updated_at
        </trim>
        ) VALUES (
        <trim prefixOverrides="," prefix="" suffix="" suffixOverrides=",">
            <if test="uid!=null">
                #{uid}
            </if>
            <if test="is_def!=null">
                ,#{is_def}
            </if>
            <if test="mobile!=null">
                ,#{mobile}
            </if>
            <if test="receiver!=null">
                ,#{receiver}
            </if>
            <if test="gender!=null">
                ,#{gender}
            </if>
            <if test="province!=null">
                ,#{province}
            </if>
            <if test="city!=null">
                ,#{city}
            </if>
            <if test="district!=null">
                ,#{district}
            </if>
            <if test="road!=null">
                ,#{road}
            </if>
            <if test="address!=null">
                ,#{address}
            </if>
            ,now()
            ,now()
        </trim>
        )
    </insert>

    <update id="update" parameterType="Address">
        UPDATE address set
        <trim prefixOverrides="," prefix="" suffix="" suffixOverrides=",">
            <if test="uid!=null">
                uid=#{uid}
            </if>
            <if test="mobile!=null">
                ,mobile=#{mobile}
            </if>
            <if test="is_def!=null">
                ,is_def=#{is_def}
            </if>
            <if test="receiver!=null">
                ,receiver=#{receiver}
            </if>
            <if test="gender!=null">
                ,gender=#{gender}
            </if>
            <if test="province!=null">
                ,province=#{province}
            </if>
            <if test="city!=null">
                ,city=#{city}
            </if>
            <if test="district!=null">
                ,district=#{district}
            </if>
            <if test="road!=null">
                ,road=#{road}
            </if>
            <if test="address!=null">
                ,address=#{address}
            </if>
            ,updated_at=now()
        </trim>
        WHERE id=#{id}
    </update>

    <update id="removeDefaultByUid">
        UPDATE address set
        is_def = 0
        ,updated_at=now()
        WHERE uid=#{uid}
    </update>

    <delete id="delete">
        DELETE FROM address WHERE id=#{id}
    </delete>

    <update id="softDelete">
        UPDATE address set deleted_at=now() WHERE id=#{id}
    </update>
</mapper>